<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>

            <checkoutcom_card_payment>

                <model>CheckoutCom\Magento2\Model\Methods\CardPaymentMethod</model>

                <!-- Requested by AbstractMethod -->
                <active>0</active>
                <debug></debug>
                <payment_action></payment_action>
                <!-- <title></title> -->
                <allowspecific></allowspecific>
                <specificcountry></specificcountry>
                <!-- </> -->

                <!--  <credentials>-->
                <environment>0</environment>
                <secret_key></secret_key>
                <public_key></public_key>
                <shared_key></shared_key>
                <!--  </credentials>-->

                <!--  <card_payments>-->
                <title>Pay by Card with Checkout.com</title>
                <card_payments_type>0</card_payments_type>
                <card_payments_action>1</card_payments_action>
                <card_payments_3ds_enabled>0</card_payments_3ds_enabled>
                <card_payments_attempt_non3ds>0</card_payments_attempt_non3ds>
                <card_payments_save_cards_enabled>0</card_payments_save_cards_enabled>
                <card_payments_save_cards_title>Pay with saved card:</card_payments_save_cards_title>
                <card_payments_dynamic_decriptor_enabled>0</card_payments_dynamic_decriptor_enabled>
                <card_payments_decriptor_name></card_payments_decriptor_name>
                <card_payments_decriptor_city></card_payments_decriptor_city>
                <card_payments_cvv_optional>0</card_payments_cvv_optional>
                <card_payments_mada_bin_check>0</card_payments_mada_bin_check>
                <!--  </card_payments>-->

            </checkoutcom_card_payment>

            <checkoutcom_alternative_payments>

                <!-- Requested by AbstractMethod -->
                <active>0</active>
                <debug></debug>
                <payment_action></payment_action>
                <!-- <title></title> -->
                <allowspecific></allowspecific>
                <specificcountry></specificcountry>
                <!-- </> -->

                <title>Alternative Payments with Checkout.com</title>
                <model>CheckoutCom\Magento2\Model\Methods\AlternativePaymentMethod</model>
                <sepa>0</sepa>
                <giropay>0</giropay>

            </checkoutcom_alternative_payments>

            <checkoutcom_google_pay>

                <!-- Requested by AbstractMethod -->
                <active>0</active>
                <debug></debug>
                <payment_action></payment_action>
                <!-- <title></title> -->
                <allowspecific></allowspecific>
                <specificcountry></specificcountry>
                <!-- </> -->

                <title>Google Pay with Checkout.com</title>
                <model>CheckoutCom\Magento2\Model\Methods\GooglePayMethod</model>
                <merchant_id></merchant_id>
                <theme></theme>

            </checkoutcom_google_pay>

            <checkoutcom_apple_pay>

                <!-- Requested by AbstractMethod -->
                <active>0</active>
                <debug></debug>
                <payment_action></payment_action>
                <!-- <title></title> -->
                <allowspecific></allowspecific>
                <specificcountry></specificcountry>
                <!-- </> -->

                <title>Apple Pay with Checkout.com</title>
                <model>CheckoutCom\Magento2\Model\Methods\ApplePayMethod</model>
                <merchant_id></merchant_id>
                <certificate></certificate>
                <certificate_key></certificate_key>
                <theme></theme>
            </checkoutcom_apple_pay>

        </payment>
    </default>
</config>